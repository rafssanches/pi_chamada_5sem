<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfessorTurmaActivity"
    android:background="@drawable/main_gradient"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/tittle_margin"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="@dimen/professor_tittle_paddingStart"
            android:text="@string/professor_tittle"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/tittle_textSize"
            />

        <Button
            android:id="@+id/sairButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sair_button"
            android:onClick="sair"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="3"
        android:useDefaultMargins="true"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_columnWeight="2"
            android:layout_height="wrap_content"
            android:text="Rafael Silva Sanches"
            android:layout_row="0"
            android:layout_column="0"
            />

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="PRESENTE"
            android:layout_row="0"
            android:layout_column="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_columnWeight="2"
            android:layout_height="wrap_content"
            android:text="Lucas Diogo Dovas"
            android:layout_row="1"
            android:layout_column="0"
            />

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="PRESENTE"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="Presente"
            android:layout_row="1"
            android:layout_column="2"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_columnWeight="2"
            android:layout_height="wrap_content"
            android:text="Gabriel Roland"
            android:layout_row="2"
            android:layout_column="0"
            />

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="PRESENTE"
            android:layout_row="2"
            android:layout_column="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_columnWeight="2"
            android:layout_height="wrap_content"
            android:text="Allan Feitosa"
            android:layout_row="3"
            android:layout_column="0"
            />

        <Button
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="PRESENTE"
            android:layout_row="3"
            android:layout_column="1"/>

    </GridLayout>
</LinearLayout>